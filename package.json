{
  "name": "ccai",
  "version": "0.7.0",
  "description": "Claude Code AI Assistant - Intelligent AI provider management and routing tool",
  "type": "module",
  "bin": {
    "ccai": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "README-zh.md",
    "LICENSE"
  ],
  "scripts": {
    "pub": "pnpm publish --access publish --no-git-checks",
    "generate:templates": "tsx scripts/generate-templates.ts",
    "build": "rolldown -c rolldown.config.ts",
    "build:watch": "rolldown -c rolldown.config.ts --watch",
    "dev": "pnpm generate:templates && tsx src/index.ts",
    "ccai": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "claude-code",
    "ai",
    "llm",
    "cli",
    "developer-tools"
  ],
  "author": {
    "name": "Gaubee",
    "email": "gaubeebangeel@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gaubee/ccai"
  },
  "packageManager": "pnpm@10.18.1",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.28",
    "commander": "^12.1.0",
    "lodash": "catalog:",
    "picocolors": "^1.1.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^3.2.4",
    "oxlint": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "rolldown": "^1.0.0-beta.45",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
