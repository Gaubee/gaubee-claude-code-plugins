{
  "ccai": {
    "name": "{{PROVIDER}}",
    "//description": [
      "{{PROVIDER}} Provider description and capabilities.",
      "",
      "**Strengths**:",
      "- Feature 1",
      "- Feature 2",
      "",
      "**Use Cases**:",
      "- Use case 1",
      "- Use case 2"
    ],
    "//systemPrompt": [
      "## Provider-Specific Instructions",
      "",
      "You are using {{PROVIDER}} model. Please follow these guidelines:",
      "",
      "1. Leverage the model's strengths",
      "2. Be aware of limitations",
      "3. Optimize for cost and performance"
    ],
    "disabled": false,
    "/*command-notes*/": {
      "variant-matching": "Use minimatch patterns: exact match, *, {opt1,opt2}, glob patterns",
      "available-placeholders": "{{log}}, {{prettyJson}}, {{sessionId}}, {{taskType}}, {{SETTINGS_PATH}}, {{SYSTEM_PROMPT}}, {{TASK}}, {{ENV.*}}",
      "execution-flow": "1. Resolve variant matches -> 2. Replace placeholders -> 3. Execute command"
    },
    "//command": {
      "executable": "claude",
      "args": [
        "--dangerously-skip-permissions",
        "--settings",
        "{{SETTINGS_PATH}}",
        {
          "//": "Variant matching: dynamically change args based on runtime options",
          "{{log}}": {
            "true": ["--output-format", "stream-json", "--verbose"],
            "false": ["--output-format", "json"]
          }
        },
        {
          "//": "Conditional args: only add --resume if sessionId is provided",
          "{{sessionId}}": {
            "{undefined,null}": [],
            "*": ["--resume", "{{sessionId}}"]
          }
        },
        {
          "//": "Complex expression: combine multiple conditions",
          "{{log}}+{{prettyJson}}": {
            "true+true": ["--format", "pretty-stream"],
            "true+false": ["--format", "stream"],
            "false+true": ["--format", "pretty"],
            "*": []
          }
        },
        "--system-prompt",
        "{{SYSTEM_PROMPT}}",
        "-p",
        "{{PROMPT}}"
      ]
    },
    "//inputSchema": {
      "type": "object",
      "properties": {
        "task": {
          "type": "string",
          "description": "The task description to be executed by the AI provider"
        }
      },
      "required": ["task"]
    },
    "//outputSchema": {
      "type": "object",
      "properties": {
        "result": {
          "type": "string",
          "description": "The execution result from the AI provider"
        },
        "status": {
          "type": "string",
          "enum": ["success", "error"],
          "description": "The execution status"
        }
      },
      "required": ["result", "status"]
    }
  },
  "env": {
    "ANTHROPIC_AUTH_TOKEN": "your-{{provider}}-api-key-here",
    "ANTHROPIC_BASE_URL": "https://api.{{provider}}.com/v1/",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  }
}
